<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="">
	<select id="">
	SELECT * FROM cms_settings
	</select>
	
	<select id="">
	SELECT * FROM cms_settings WHERE id=#{id}
	</select>
	
	<insert id="">
	INSERT INTO cms_settings(site_domain,site_name,article_list_size,slide_size,admin_username,admin_password)VALUES 
	(#{site_domain},#{site_name},#{article_list_size},#{slide_size},#{admin_username},#{admin_password})
	</insert>
	
	<delete id="">
	DELETE FROM cms_settings WHERE id in(${ids})
	</delete>
	
	<update id="">
	UPDATE cms_settings
 	SET site_domain=#{site_domain},site_name=#{site_name},article_list_size=#{article_list_size},slide_size=#{slide_size},admin_username=#{admin_username},admin_password=#{admin_password} 
	WHERE id=#{id}
	</update>
	
</mapper>